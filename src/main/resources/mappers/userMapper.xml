<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.andy.recipe.user.repository.UserRepository">
	<insert id="insertUser" parameterType="map">
		INSERT INTO
		`user`
		(
		`loginId`
		,`password`
		,`email`
		)
		VALUES
		(
		#{loginId}
		, #{password}
		, #{email}
		)

	</insert>

	<select id="selectCountByloginId" parameterType="string"
		resultType="int">
		SELECT
		count(*)
		FROM
		`user`
		WHERE
		`loginId`
		=
		#{loginId}
	</select>

	<select id="selectCountByemail" parameterType="string"
		resultType="int">
		SELECT
		count(*)
		FROM
		`user`
		WHERE
		`email`
		=
		#{email}
	</select>

	<select id="selectUser" parameterType="map"
		resultType="com.andy.recipe.user.domain.User">
		SELECT
		`id`
		,`loginId`
		,`password`
		,`email`
		,`createdAt`
		,`updatedAt`
		FROM
		`user`
		WHERE
		`loginId`= #{loginId}
		AND
		`password`=
		#{password}
	</select>

	<select id="selectUserById" parameterType="long"
		resultType="com.andy.recipe.user.domain.User">
		SELECT
		`id`
		,`loginId`
		,`password`
		,`email`
		,`createdAt`
		,`updatedAt`
		FROM
		`user`
		WHERE
		`id` = #{id}
	</select>
</mapper>